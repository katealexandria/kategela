
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    xmlns:app="http://schemas.android.com/apk/res/com.malabon.pos"
	    tools:context=".CloseDay"
        style="@style/popup"
        android:layout_width="wrap_content" >

        <TextView
            style="@style/H1"
            android:text="@string/EndOfDay" />

        <LinearLayout style="@style/wrapper_horizontal" >

            <android.support.v7.widget.GridLayout
                style="@style/wrapper_grid_common"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/blue_border"
                app:columnCount="5"
                app:rowCount="5" >

                <TextView
                    style="@style/field_label"
                    app:layout_column="0"
                    app:layout_row="0"
                    android:text="@string/php1000" />

                <TextView
                    style="@style/field_label"
                    app:layout_column="0"
                    app:layout_row="1"
                    android:text="@string/php500" />

                <TextView
                    style="@style/field_label"
                    app:layout_column="0"
                    app:layout_row="2"
                    android:text="@string/php200" />

                <TextView
                    style="@style/field_label"
                    app:layout_column="0"
                    app:layout_row="3"
                    android:text="@string/php100" />

                <TextView
                    style="@style/field_label"
                    app:layout_column="0"
                    app:layout_row="4"
                    android:text="@string/php50" />

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="75dp"
                    app:layout_column="1"
                    app:layout_row="0" >

                    <requestFocus />
                </EditText>

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="75dp"
                    app:layout_column="1"
                    app:layout_row="1" >
                </EditText>

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="75dp"
                    app:layout_column="1"
                    app:layout_row="2" >
                </EditText>

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="75dp"
                    app:layout_column="1"
                    app:layout_row="3" >
                </EditText>

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="75dp"
                    app:layout_column="1"
                    app:layout_row="4" >
                </EditText>

                <TextView
                    style="@style/field_label"
                    app:layout_column="2"
                    app:layout_row="0"
                    android:text="@string/php20" />

                <TextView
                    style="@style/field_label"
                    app:layout_column="2"
                    app:layout_row="1"
                    android:text="@string/php10" />

                <TextView
                    style="@style/field_label"
                    app:layout_column="2"
                    app:layout_row="2"
                    android:text="@string/php5" />

                <TextView
                    style="@style/field_label"
                    app:layout_column="2"
                    app:layout_row="3"
                    android:text="@string/php1" />

                <TextView
                    style="@style/field_label"
                    app:layout_column="2"
                    app:layout_row="4"
                    android:text="@string/php25c" />

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="75dp"
                    app:layout_column="3"
                    app:layout_row="0" >
                </EditText>

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="75dp"
                    app:layout_column="3"
                    app:layout_row="1" >
                </EditText>

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="75dp"
                    app:layout_column="3"
                    app:layout_row="2" >
                </EditText>

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="75dp"
                    app:layout_column="3"
                    app:layout_row="3" >
                </EditText>

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="75dp"
                    app:layout_column="3"
                    app:layout_row="4" >
                </EditText>

                <android.support.v7.widget.GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="4"
                    app:layout_row="0"
                    app:layout_rowSpan="5"
                    android:padding="20dp"
                    app:columnCount="3"
                    app:rowCount="4" >

                    <Button
                        android:id="@+id/btn7n"
                        style="@style/btn_gray_fit"
                        app:layout_column="0"
                        app:layout_row="0"
                        android:text="@string/seven" />

                    <Button
                        android:id="@+id/btn4n"
                        style="@style/btn_gray_fit"
                        app:layout_column="0"
                        app:layout_row="1"
                        android:text="@string/four" />

                    <Button
                        android:id="@+id/btn1n"
                        style="@style/btn_gray_fit"
                        app:layout_column="0"
                        app:layout_row="2"
                        android:text="@string/one" />

                    <Button
                        android:id="@+id/btnClr"
                        style="@style/btn_gray_fit"
                        app:layout_column="0"
                        app:layout_row="3"
                        android:text="@string/C" />

                    <Button
                        android:id="@+id/btn8n"
                        style="@style/btn_gray_fit"
                        app:layout_column="1"
                        app:layout_row="0"
                        android:text="@string/eight" />

                    <Button
                        android:id="@+id/btn5n"
                        style="@style/btn_gray_fit"
                        app:layout_column="1"
                        app:layout_row="1"
                        android:text="@string/five" />

                    <Button
                        android:id="@+id/btn2n"
                        style="@style/btn_gray_fit"
                        app:layout_column="1"
                        app:layout_row="2"
                        android:text="@string/two" />

                    <Button
                        android:id="@+id/btn0n"
                        style="@style/btn_gray_fit"
                        app:layout_column="1"
                        app:layout_row="3"
                        android:text="@string/zero" />

                    <Button
                        android:id="@+id/btn9n"
                        style="@style/btn_gray_fit"
                        app:layout_column="2"
                        app:layout_row="0"
                        android:text="@string/nine" />

                    <Button
                        android:id="@+id/btn6n"
                        style="@style/btn_gray_fit"
                        app:layout_column="2"
                        app:layout_row="1"
                        android:text="@string/six" />

                    <Button
                        android:id="@+id/btn3n"
                        style="@style/btn_gray_fit"
                        app:layout_column="2"
                        app:layout_row="2"
                        android:text="@string/three" />

                    <Button
                        android:id="@+id/bntNeg"
                        style="@style/btn_gray_fit"
                        app:layout_column="2"
                        app:layout_row="3"
                        android:text="@string/Neg" />
                </android.support.v7.widget.GridLayout>
            </android.support.v7.widget.GridLayout>

            <android.support.v7.widget.GridLayout
                style="@style/wrapper_grid_common"
                android:layout_width="wrap_content"
                android:background="@drawable/pink_border"
                app:columnCount="1"
                app:rowCount="7" >

                <TextView
                    style="@style/field_label"
                    app:layout_column="0"
                    app:layout_gravity="left"
                    app:layout_row="0"
                    android:text="@string/Counted" />

                <TextView
                    style="@style/field_label"
                    app:layout_column="0"
                    app:layout_gravity="left"
                    app:layout_row="1"
                    android:text="@string/Register" />

                <TextView
                    style="@style/field_label"
                    app:layout_column="0"
                    app:layout_gravity="left"
                    app:layout_row="2"
                    android:text="@string/Deposit" />

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="80dp"
                    app:layout_column="0"
                    app:layout_gravity="right"
                    app:layout_row="0" >
                </EditText>

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="80dp"
                    app:layout_column="0"
                    app:layout_gravity="right"
                    app:layout_row="1" >
                </EditText>

                <EditText
                    style="@style/textbox_numeric"
                    android:layout_width="80dp"
                    app:layout_column="0"
                    app:layout_gravity="right"
                    app:layout_row="2" >
                </EditText>

                <TextView
                    style="@style/H2"
                    android:layout_width="wrap_content"
                    app:layout_column="0"
                    app:layout_gravity="left"
                    app:layout_row="3"
                    android:text="@string/CashExpected" />

                <TextView
                    style="@style/H3"
                    android:layout_width="wrap_content"
                    app:layout_column="0"
                    app:layout_gravity="right"
                    app:layout_row="4"
                    android:text="75.50" />

                <TextView
                    style="@style/H2"
                    android:layout_width="wrap_content"
                    app:layout_column="0"
                    app:layout_gravity="left"
                    app:layout_row="5"
                    android:text="@string/CashDifference" />

                <TextView
                    style="@style/H3"
                    android:layout_width="wrap_content"
                    app:layout_column="0"
                    app:layout_gravity="right"
                    app:layout_row="6"
                    android:text="-75.50" />
            </android.support.v7.widget.GridLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/wrapper_horizontal"
            android:layout_gravity="right"
            android:layout_margin="20dp">

            <Button
                style="@style/btn_red_150"
                android:onClick="cancel"
                android:text="@string/Cancel" />

            <Button
                style="@style/btn_green_150"
                android:onClick="endDay"
                android:text="@string/EndTheDay" />
        </LinearLayout>
    </LinearLayout>