<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    xmlns:app="http://schemas.android.com/apk/res/com.malabon.pos"
	    tools:context=".EditOrders"
        android:id="@+id/Wrapper"
        style="@style/popup"
        android:layout_width="800dp" >
		
        <TextView
            style="@style/H1"
            android:text="Customer Name" />
        
        <TableLayout
	        style="@style/wrapper_table"
	        android:stretchColumns="1">
	        
	        <TableRow
	            style="@style/table_header">
	            
	            <TextView 
	                style="@style/h3_item"
	                android:layout_weight="2"
	                android:text="@string/Name" />
	            
	            <TextView 
	                style="@style/h3_item"
	                android:text="@string/Code" />
	            
	            <TextView 
	                style="@style/h3_item"
	                android:text="@string/Price" />
	            
	            <TextView 
	                style="@style/h3_item"
	                android:text="@string/Disc" />
	            
	            <TextView 
	                style="@style/h3_item"
	                android:text="@string/Quantity" />
	            
	            <TextView 
	                style="@style/h3_item"
	                android:text="" />
	            
	        </TableRow>
	        
	        <ScrollView
	            android:id="@+id/scrollView"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent" >            
       	        <TableLayout
       	            android:id="@+id/tableLayout"
			        style="@style/wrapper_table"
			        android:stretchColumns="1">
		        </TableLayout>
		        
	        </ScrollView>
       
	    </TableLayout>
	           
        
        <android.support.v7.widget.GridLayout
            style="@style/wrapper_grid"
            android:layout_width="match_parent"
            app:rowCount="1"
            app:columnCount="1"
            android:layout_marginTop="30dp" >
            
        <LinearLayout
            style="@style/wrapper_vertical"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_gravity="left" >

            <Button
                android:onClick="pay"
                android:text="@string/Pay"
                style="@style/btn_green_150" />
            
            <Button
                android:onClick="close"
                android:text="@string/Close"
                style="@style/btn_red_150" />
            
        </LinearLayout>
        
        <TableLayout
	        style="@style/wrapper_table"
	        android:layout_width="wrap_content"
	        app:layout_row="0"
            app:layout_column="0"
            app:layout_gravity="right" >
	        
	        <TableRow
	            style="@style/table_row">
	        
	            <TextView
                    style="@style/h3_subtotal"
                    android:text="@string/NetTotal" />

                <TextView
                    style="@style/h3_subtotal_amt"
                    android:id="@+id/netTotal" />
	            
	        </TableRow>
	        
	        <TableRow
	            style="@style/table_row">
	        
	            <TextView
                    style="@style/h3_subtotal"
                    android:text="@string/TaxTotal" />

                <TextView
                    style="@style/h3_subtotal_amt"      
                    android:id="@+id/taxTotal"  />
	            
	        </TableRow>
	        
	        <TableRow
	            style="@style/table_row_total">
	        
	            <TextView
                    style="@style/h2_total"
                    android:text="@string/Total" />

                <TextView
                    style="@style/h2_total_amt"
                    android:id="@+id/total"/>
	            
	        </TableRow>
	        
	    </TableLayout>            
            
        </android.support.v7.widget.GridLayout>
    </LinearLayout>