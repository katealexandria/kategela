    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    xmlns:app="http://schemas.android.com/apk/res/com.malabon.pos"
	    tools:context=".Payment"
        android:id="@+id/Wrapper"
        style="@style/popup"
        android:layout_width="wrap_content" >
		
        <TextView
            style="@style/H1"
            android:text="@string/Payment" />

        <TextView
            style="@style/H2"
            android:text="Customer Name" />

        <LinearLayout
            style="@style/wrapper_horizontal" >
            
            <android.support.v7.widget.GridLayout
	            style="@style/wrapper_grid_common"
	            app:rowCount="4"
	            app:columnCount="2" >
                
                <Button
                    android:id="@+id/btn1000"
                    android:text="@string/p1000"
                    style="@style/btn_gray_150"
                    app:layout_row="0"
                    app:layout_column="0" />

                <Button
                    android:id="@+id/btn100"
                    android:text="@string/p100"
                    style="@style/btn_gray_150"
                    app:layout_row="1"
                    app:layout_column="0" />

                <Button
                    android:id="@+id/btn20"
                    android:text="@string/p20"
                    style="@style/btn_gray_150"
                    app:layout_row="2"
                    app:layout_column="0" />

                <Button
                    android:id="@+id/btn5"
                    android:text="@string/p5"
                    style="@style/btn_gray_150"
                    app:layout_row="3"
                    app:layout_column="0" />
                
                <Button
                    android:id="@+id/btn500"                    
                    android:text="@string/p500"
                    style="@style/btn_gray_150"
                    app:layout_row="0"
                    app:layout_column="1" />

                <Button
                    android:id="@+id/btn50"
                    android:text="@string/p50"
                    style="@style/btn_gray_150"
                    app:layout_row="1"
                    app:layout_column="1" />

                <Button
                    android:id="@+id/btn10"
                    android:text="@string/p10"
                    style="@style/btn_gray_150"
                    app:layout_row="2"
                    app:layout_column="1" />

                <Button
                    android:id="@+id/btn1"
                    android:text="@string/p1"
                    style="@style/btn_gray_150"
                    app:layout_row="3"
                    app:layout_column="1" />

            </android.support.v7.widget.GridLayout>

            <TableLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="20dp" >

                <TableRow
                    style="@style/table_row" >

                    <TextView
                        style="@style/h3_subtotal"
                        android:text="@string/Total" />

                    <TextView
                        android:text="75.50"
                        style="@style/h3_subtotal_amt" />

                </TableRow>
                
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    
                    <TableRow
	                    style="@style/table_row_total" >
	
	                    <TextView
	                        style="@style/h3_item"
	                        android:text="@string/Cash"
	                        android:textSize="20sp"
	                        android:textColor="#999" />
	
	                    <TextView
	                        style="@style/h3_item"
	                        android:text="100.00" />
	
	                </TableRow>
                    
                </ScrollView>                

                <TableRow
                    style="@style/table_row" >

                    <TextView
                        style="@style/h3_subtotal"
                        android:text="@string/Change" />

                    <TextView
                        style="@style/h3_subtotal_amt"
                        android:text="24.50" />

                </TableRow>
            </TableLayout>

            <LinearLayout
                style="@style/wrapper_vertical"
                android:background="@drawable/pink_border"
                android:layout_marginTop="20dp" >

                <RadioGroup
					    style="@style/wrapper_vertical"
					    android:layout_width="fill_parent">
	                    
	                <RadioButton
	                    style="@style/H3"
	                    android:text="@string/DineIn" />
	
	                <RadioButton
	                    style="@style/H3"
	                    android:text="@string/TakeOut" />
	
	                <RadioButton
	                    style="@style/H3"
	                    android:text="@string/Delivery" />
				
                </RadioGroup>
                
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:text="@string/EnterCash"
                android:onClick="enterCash"
                style="@style/btn_orange_small" />

            <Button
                android:text="@string/ExactCash"
                android:onClick="exactCash"
                style="@style/btn_orange_small" />

            <Button
                android:text="@string/Cancel"
                android:onClick="cancel"
                style="@style/btn_red_small" />

            <Button
                android:text="@string/Confirm"
                android:onClick="confirm"
                style="@style/btn_green_small" />

        </LinearLayout>

    </LinearLayout>